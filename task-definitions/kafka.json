[
  {
    "name": "kafka",
    "image": "confluentinc/cp-kafka:3.1.1",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "environment": [
      {
        "name": "KAFKA_BROKER_ID",
        "value": "0"
      },
      {
        "name": "KAFKA_ZOOKEEPER_CONNECT",
        "value": "zookeeper:2181"
      },
      {
        "name": "KAFKA_ADVERTISED_LISTENERS",
        "value": "PLAINTEXT://kafka:9092"
      },
      {
        "name": "KAFKA_AUTO_CREATE_TOPICS_ENABLE",
        "value": "true"
      }
    ],
    "portMappings": [
      {
        "containerPort": 9092,
        "hostPort": 9092
      },
      {
        "containerPort": 8082,
        "hostPort": 8082
      }
    ]
  }
]
